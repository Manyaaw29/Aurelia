                <div class="product-info">
                    <h3 class="product-title">Venus Diamond Studs</h3>
                    <p class="product-price">₹ 35,000</p>
                    <p class="product-meta">14k Gold | 0.50ct Total</p>
                </div>
            </a>
            <div class="product-actions">
                <button class="wishlist-btn" data-name="Venus Studs"><i class="far fa-heart"></i></button>
                <button class="cart-btn" data-name="Venus Studs">Add to Cart</button>
            </div>
        </div>

        <div class="product-card">
            <a href="/product/aurora-hoops" class="product-link">
                <div class="product-image">
                    <img src="earring-2.jpg" alt="Aurora Huggie Hoops">
                </div>
                <div class="product-info">
                    <h3 class="product-title">Aurora Huggie Hoops</h3>
                    <p class="product-price">₹ 22,000</p>
                    <p class="product-meta">18k Rose Gold | Pavé Diamonds</p>
                </div>
            </a>
            <div class="product-actions">
                <button class="wishlist-btn" data-name="Aurora Hoops"><i class="far fa-heart"></i></button>
                <button class="cart-btn" data-name="Aurora Hoops">Add to Cart</button>
            </div>
        </div>

        <div class="product-card">
            <a href="/product/celestial-drops" class="product-link">
                <div class="product-image">
                    <img src="earring-3.jpg" alt="Celestial Pearl Drops">
                </div>
                <div class="product-info">
                    <h3 class="product-title">Celestial Pearl Drops</h3>
                    <p class="product-price">₹ 48,000</p>
                    <p class="product-meta">14k Gold | Freshwater Pearl</p>
                </div>
            </a>
            <div class="product-actions">
                <button class="wishlist-btn" data-name="Celestial Drops"><i class="far fa-heart"></i></button>
                <button class="cart-btn" data-name="Celestial Drops">Add to Cart</button>
            </div>
        </div>

        <div class="product-card">
            <a href="/product/emerald-cut" class="product-link">
                <div class="product-image">
                    <img src="earring-4.jpg" alt="Emerald Cut Studs">
                </div>
                <div class="product-info">
                    <h3 class="product-title">Emerald Cut Studs</h3>
                    <p class="product-price">₹ 95,000</p>
                    <p class="product-meta">Platinum | Emerald Cut Diamond</p>
                </div>
            </a>
            <div class="product-actions">
                <button class="wishlist-btn" data-name="Emerald Studs"><i class="far fa-heart"></i></button>
                <button class="cart-btn" data-name="Emerald Studs">Add to Cart</button>
            </div>
        </div>

        </div>
</main>

<script>
    // Note: showNotification is in footer.hbs

    // Add to Wishlist functionality
    document.querySelectorAll('.wishlist-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            const productName = btn.getAttribute('data-name');
            showNotification(`${productName} added to wishlist!`);
        });
    });

    // Add to Cart functionality
    document.querySelectorAll('.cart-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            e.stopPropagation();
            const productName = btn.getAttribute('data-name');
            showNotification(`${productName} added to cart!`);
        });
    });
    
    // Filter/Sort Toggle Logic (Minimal implementation)
    document.querySelector('.filter-btn').addEventListener('click', () => {
        document.querySelector('.filter-content').classList.toggle('active');
    });

    // Close filters if clicked outside
    document.addEventListener('click', (e) => {
        const filterDropdown = document.querySelector('.filter-dropdown');
        const filterContent = document.querySelector('.filter-content');
        if (!filterDropdown.contains(e.target) && filterContent.classList.contains('active')) {
            filterContent.classList.remove('active');
        }
    });
</script>