{{! views/earrings.hbs - RENDER with { layout: 'main', title: 'Earrings', cssFile: 'categories.css' } }}

<main class="collection-page container">
    <div class="category-banner banner-earrings">
        <div class="banner-content">
            <h1>Earrings Collection</h1>
            <p>Find the perfect statement or subtle stud. Designed to frame your face with light and movement.</p>
        </div>
    </div>

    <div class="sort-filter-bar">
        <div class="filter-dropdown">
            <button class="filter-btn">Filter <i class="fas fa-chevron-down"></i></button>
            <div class="filter-content">
                <h4>Style</h4>
                <label><input type="checkbox"> Studs</label>
                <label><input type="checkbox"> Hoops</label>
                <label><input type="checkbox"> Drops</label>

                <h4>Metal</h4>
