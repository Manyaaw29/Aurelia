<script>
    document.addEventListener('DOMContentLoaded', () => {
        const heroVideo = document.querySelector('.hero-video');
        const taglineText = document.querySelector('.tagline-text');
        const storyContent = document.querySelector('.story-content');
        const storyImage = document.querySelector('.story-image');
        const contentOffset = document.querySelector('.content-offset'); // The element below the fixed header

        // --- Parallax Effect on Hero Video ---
        window.addEventListener('scroll', () => {
            const scrollY = window.scrollY;
            heroVideo.style.transform = `translateY(${scrollY * 0.4}px)`;
        });

        // --- Dynamic CSS for Animations ---
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeInUp {
                from { opacity: 0; transform: translateY(20px); }
                to { opacity: 1; transform: translateY(0); }
            }
            @keyframes slideInRight {
                from { opacity: 0; transform: translateX(50px); }
                to { opacity: 1; transform: translateX(0); }
            }
            @keyframes slideInLeft {
                from { opacity: 0; transform: translateX(-50px); }
                to { opacity: 1; transform: translateX(0); }
            }
        `;
        document.head.appendChild(style);

        // --- Intersection Observer for Animations ---
        const observerOptions = { threshold: 0.3 };
        
        const taglineObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = 'fadeInUp 0.8s ease forwards';
                    taglineObserver.unobserve(entry.target);
                }
            });
        }, { threshold: 0.5 });

        const storyObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.querySelector('.story-content').style.animation = 'slideInRight 0.8s ease forwards';
                    entry.target.querySelector('.story-image').style.animation = 'slideInLeft 0.8s ease forwards';
                    storyObserver.unobserve(entry.target);
                }
            });
        }, observerOptions);

        if (taglineText) {
            taglineText.style.opacity = '0';
            taglineObserver.observe(taglineText);
        }

        if (document.querySelector('.our-story')) {
            storyContent.style.opacity = '0';
            storyImage.style.opacity = '0';
            storyObserver.observe(document.querySelector('.our-story'));
        }

        console.log('ðŸŽ¨ Aurelia Homepage Enhanced - All features loaded!');
    });
</script>