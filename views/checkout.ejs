<div class="checkout-container">
        <div class="checkout-header">
            <h1 class="checkout-title">Checkout</h1>
            <p class="checkout-subtitle">Complete your purchase securely</p>
        </div>

        <div class="checkout-steps">
            <div class="step completed">
                <div class="step-number">1</div>
                <div class="step-label">Cart</div>
                <div class="step-line"></div>
            </div>
            <div class="step active">
                <div class="step-number">2</div>
                <div class="step-label">Information</div>
                <div class="step-line"></div>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <div class="step-label">Payment</div>
                <div class="step-line"></div>
            </div>
            <div class="step">
                <div class="step-number">4</div>
                <div class="step-label">Confirmation</div>
            </div>
        </div>

        <div class="checkout-main">
            <div class="checkout-left">
                <div class="checkout-section">
                    <h2 class="section-title with-actions">
                        <span class="section-icon">üìç</span>
                        Shipping Information
                        <div class="address-actions">
                            <button type="button" class="edit-address-btn">‚úèÔ∏è</button>
                            <button type="button" class="save-address-btn" style="display: none;">‚úì</button>
                            <button type="button" class="cancel-address-btn" style="display: none;">‚úï</button>
                        </div>
                    </h2>
                    <div class="address-notification"></div>
                    <form id="shippingForm">
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">First Name *</label>
                                <input type="text" id="firstName" class="form-input" placeholder="Enter first name" value="Priya" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Last Name *</label>
                                <input type="text" id="lastName" class="form-input" placeholder="Enter last name" value="Sharma" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group full-width">
                                <label class="form-label">Email Address *</label>
                                <input type="email" id="email" class="form-input" placeholder="your.email@example.com" value="priya.sharma@example.com" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group full-width">
                                <label class="form-label">Phone Number *</label>
                                <input type="tel" id="phone" class="form-input" placeholder="+91 XXXXX XXXXX" value="+91 98765 43210" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group full-width">
                                <label class="form-label">Street Address *</label>
                                <input type="text" id="address" class="form-input" placeholder="House no., Street name" value="123, Green Valley Apartments" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">City *</label>
                                <input type="text" id="city" class="form-input" placeholder="City" value="Mumbai" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">State *</label>
                                <select id="state" class="form-select" required>
                                    <option value="">Select State</option>
                                    <option selected>Maharashtra</option>
                                    <option>Delhi</option>
                                    <option>Karnataka</option>
                                    <option>Tamil Nadu</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">PIN Code *</label>
                                <input type="text" id="pincode" class="form-input" placeholder="400001" value="400001" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Country *</label>
                                <select id="country" class="form-select" required>
                                    <option value="">Select Country</option>
                                    <option selected>India</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="checkout-section">
                    <h2 class="section-title">
                        <span class="section-icon">üí≥</span>
                        Payment Method
                    </h2>
                    <div class="payment-notification"></div>
                    <div class="payment-methods">
                        <label class="payment-option">
                            <input type="radio" name="payment" value="upi">
                            <div class="payment-header">
                                <span class="payment-icon">üì±</span>
                                <span>UPI</span>
                            </div>
                            <div class="payment-details">
                                <div class="form-group">
                                    <label class="form-label">Enter UPI ID *</label>
                                    <input type="text" id="upiId" class="form-input payment-field" placeholder="yourname@upi">
                                </div>
                                <div class="upi-apps">
                                    <div class="upi-app">
                                        <img src="images/googlepay.png" alt="Google Pay" style="width:2rem; height:2rem; object-fit:contain;">
                                        <div class="upi-app-name">Google Pay</div>
                                    </div>
                                    <div class="upi-app">
                                        <img src="images/phonepe.png" alt="PhonePe" style="width:2rem; height:2rem; object-fit:contain;">
                                        <div class="upi-app-name">PhonePe</div>
                                    </div>
                                    <div class="upi-app">
                                        <img src="images/paytm.png" alt="Paytm" style="width:2rem; height:2rem; object-fit:contain;">
                                        <div class="upi-app-name">Paytm</div>
                                    </div>
                                    <div class="upi-app">
                                        <img src="images/bhim.webp" alt="BHIM" style="width:2rem; height:2rem; object-fit:contain;">
                                        <div class="upi-app-name">BHIM</div>
                                    </div>
                                </div>
                            </div>
                        </label>

                        <label class="payment-option">
                            <input type="radio" name="payment" value="card">
                            <div class="payment-header">
                                <span class="payment-icon">üí≥</span>
                                <span>Credit / Debit Card</span>
                            </div>
                            <div class="payment-details">
                                <div class="form-group">
                                    <label class="form-label">Card Number *</label>
                                    <input type="text" id="cardNumber" class="form-input payment-field" placeholder="1234 5678 9012 3456" maxlength="19">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Cardholder Name *</label>
                                    <input type="text" id="cardName" class="form-input payment-field" placeholder="Name on card">
                                </div>
                                <div class="card-row">
                                    <div class="form-group">
                                        <label class="form-label">Expiry Date *</label>
                                        <input type="text" id="cardExpiry" class="form-input payment-field" placeholder="MM/YY">
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label">CVV *</label>
                                        <input type="text" id="cardCVV" class="form-input payment-field" placeholder="123" maxlength="3">
                                    </div>
                                </div>
                            </div>
                        </label>

                        <label class="payment-option">
                            <input type="radio" name="payment" value="cod">
                            <div class="payment-header">
                                <span class="payment-icon">üíµ</span>
                                <span>Cash on Delivery</span>
                            </div>
                            <div class="payment-details">
                                <p style="color: #CCCCCC; font-size: 0.9rem; line-height: 1.6;">
                                    Pay with cash when your order is delivered. Please keep exact change handy to help us serve you better.
                                </p>
                            </div>
                        </label>
                    </div>
                </div>
            </div>

            <div class="checkout-right">
                <div class="order-summary">
                    <h2 class="summary-title">Order Summary</h2>

                    <div id="orderItems"></div>

                    <div class="summary-divider"></div>

                    <div class="promo-code">
                        <input type="text" class="promo-input" placeholder="Enter promo code">
                        <button class="apply-btn">Apply</button>
                    </div>

                    <div class="summary-row">
                        <span>Subtotal</span>
                        <span id="subtotalAmount">‚Çπ0</span>
                    </div>
                    <div class="summary-row">
                        <span>Shipping</span>
                        <span style="color: #4CAF50;">FREE</span>
                    </div>
                    <div class="summary-row">
                        <span>Tax (GST 3%)</span>
                        <span id="taxAmount">‚Çπ0</span>
                    </div>

                    <div class="summary-row total">
                        <span>Total</span>
                        <span id="totalAmount">‚Çπ0</span>
                    </div>

                    <button class="place-order-btn">Place Order</button>

                    <div class="secure-badge">
                        <span>üîí</span>
                        <span>Secure Checkout - Your data is protected</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmation Modal -->
    <div id="confirmationModal" class="modal-overlay">
        <div class="modal-box confirmation-modal">
            <div class="modal-icon info">‚ùì</div>
            <h2 class="modal-title">Confirm Your Order</h2>
            <p class="modal-message">Are you sure you want to place this order?</p>
            <div style="display: flex; gap: 15px; justify-content: center;">
                <button class="modal-button confirm-yes" style="background: linear-gradient(135deg, #4CAF50, #66BB6A);">
                    ‚úì Yes, Place Order
                </button>
                <button class="modal-button confirm-no" style="background: linear-gradient(135deg, #f44336, #d32f2f);">
                    ‚úï Cancel
                </button>
            </div>
        </div>
    </div>

    <!-- Order Success Modal -->
    <div id="successModal" class="modal-overlay">
        <div class="modal-box order-confirmation-modal">
            <button class="modal-close">√ó</button>
            <div class="modal-icon success">‚úì</div>
            <h3 class="modal-title">Order Confirmed!</h3>
            <p class="modal-message">Thank you for your purchase. Your order has been confirmed and is being processed.</p>
            
            <div class="modal-order-number">
                <div class="modal-order-number-label">Order Number</div>
                <div class="modal-order-number-value" id="orderNumber">AUR-2024-12345</div>
            </div>

            <h3 class="modal-section-title">Order Items</h3>
            <div class="modal-order-items" id="modalOrderItems"></div>

            <h3 class="modal-section-title">Order Summary</h3>
            <div class="modal-totals" id="modalTotals"></div>

            <div class="modal-shipping-info">
                <div class="modal-shipping-title">üìç Shipping Address</div>
                <div class="modal-shipping-address">
                    <div id="shippingDetails" style="color: #CCCCCC;"></div>
                </div>
            </div>
            
            <div class="modal-delivery-box">
                <div class="modal-delivery-info">
                    <div class="modal-delivery-title">üöö Estimated Delivery</div>
                    <div class="modal-delivery-date">
                        Your order will be delivered between<br>
                        <strong>October 5 - October 8, 2025</strong>
                    </div>
                </div>
            </div>
            
            <div class="modal-actions">
                <button class="modal-button" onclick="window.location.href='/account/orders'">View Order Details</button>
                <button class="modal-button secondary" onclick="window.location.href='/'">Continue Shopping</button>
            </div>
        </div>
    </div>

    <script src="/js/checkout.js"></script>
</body>
</html>