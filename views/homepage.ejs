<section class="hero">
    <div class="hero-content">
        <h1 class="hero-title">New Arrivals</h1>
        <p class="hero-subtitle">Luxurious Jewelry</p>
        <a href="/collections" class="cta-button">Shop Now</a>
    </div>
</section>

<section class="tagline-section">
    <h2 class="tagline-text">Elegance That Lasts Forever</h2>
</section>

<section class="category-section">
    <div class="container">
        <div class="category-grid">
            <a href="/rings" class="category-card">
                <div class="category-image" style="background-image: url('https://png.pngtree.com/thumb_back/fh260/background/20240207/pngtree-a-diamond-engagement-ring-with-round-brilliant-image_15623471.jpg');">
                    <div class="category-overlay">
                        <div class="category-name">Rings</div>
                    </div>
                </div>
            </a>
            <a href="/earrings" class="category-card">
                <div class="category-image" style="background-image: url('https://stylishlooks.in/wp-content/uploads/2023/01/Round-Brilliant-Cut-Cubic-Zirconia-Stud-Earrings-2.webp');">
                    <div class="category-overlay">
                        <div class="category-name">Earrings</div>
                    </div>
                </div>
            </a>
            <a href="/necklaces" class="category-card">
                <div class="category-image" style="background-image: url('https://ratnalayajewels.com/wp-content/uploads/2023/07/DN-45-4.jpg');">
                    <div class="category-overlay">
                        <div class="category-name">Necklaces</div>
                    </div>
                </div>
            </a>
            <a href="/bracelets" class="category-card">
                <div class="category-image" style="background-image: url('https://i.pinimg.com/564x/9b/bc/8d/9bbc8d7e884e764c7b319d923aefe8b9.jpg');">
                    <div class="category-overlay">
                        <div class="category-name">Bracelets</div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>

<section class="video-section">
    <video width="100%" autoplay loop muted playsinline>
        <source src="homepage.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</section>

<section class="brand-story">
    <div class="container">
        <div class="story-grid">
            <div class="story-image"></div>
            <div class="story-content">
                <h2>Our Story</h2>
                <p>"At Aurelia, we craft timeless jewelry that blends elegance, tradition, and modern design. Using only certified materials and skilled craftsmanship, every piece is made to celebrate life's most precious moments. Our promise is beauty, trust, and memories that last forever."</p>
            </div>
        </div>
    </div>
</section>

<section class="best-sellers">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Shop Best Sellers</h2>
            <a href="/collections" class="section-cta">Shop Now</a>
        </div>
        
        <div class="products-grid">
            <% if (featuredProducts && featuredProducts.length > 0) { %>
                <% featuredProducts.forEach(product => { %>
                    <div class="product-card" 
                         data-product-id="<%= product._id %>" 
                         data-product-name="<%= product.name %>" 
                         data-product-price="<%= product.price %>" 
                         data-product-image="<%= product.images[0].url || product.images[0] %>">
                        <a href="/product/<%= product._id %>" class="product-link">
                            <div class="product-image" style="background-image: url('<%= product.images[0].url || product.images[0] %>');"></div>
                            <div class="product-info">
                                <div class="product-name"><%= product.name %></div>
                                <div class="product-price">₹<%= product.price.toLocaleString('en-IN') %></div>
                            </div>
                        </a>
                            <button class="add-to-cart-btn" 
                                    onclick="event.preventDefault(); event.stopPropagation(); addToCartFromCard(event, this)"
                                       style="width: 100%; padding: 12px; background: linear-gradient(135deg, #D4AF37, #F4D03F); color: #000; border: none; border-radius: 20px; font-weight: 600; cursor: pointer; transition: all 0.3s ease;">
                                Add to Cart
                            </button>
                    </div>
                <% }); %>
            <% } else { %>
                <p style="color: #ccc; text-align: center; grid-column: 1 / -1; padding: 40px 0;">No featured products available.</p>
            <% } %>
        </div>
    </div>
</section>

<section class="testimonials">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">What Our Customers Say</h2>
        </div>
        
        <div class="testimonials-grid">
            <div class="testimonial-card">
                <p class="testimonial-text">"The craftsmanship is absolutely extraordinary. Each piece tells a story of elegance and timeless beauty."</p>
                <div class="testimonial-author">— Priya Sharma</div>
            </div>
            
            <div class="testimonial-card">
                <p class="testimonial-text">"Aurelia's jewelry has become my signature. The quality is unmatched, and the designs are both contemporary and classic."</p>
                <div class="testimonial-author">— Kavya Patel</div>
            </div>
        </div>
        
        <div class="testimonials-cta">
            <a href="/customerstories" class="section-cta">Read More Stories</a>
        </div>
    </div>
</section>

<section class="app-download">
    <div class="container">
        <h3 style="color: #D4AF37; font-family: 'Playfair Display', serif; font-size: 1.8rem; margin-bottom: 15px;">Download Our App</h3>
        <p style="color: #CCCCCC; margin-bottom: 30px;">Shop anytime, anywhere with the Aurelia mobile app</p>
        <div class="app-buttons">
            <img src="https://upload.wikimedia.org/wikipedia/commons/7/78/Google_Play_Store_badge_EN.svg" alt="Google Play" class="app-button">
            <img src="https://upload.wikimedia.org/wikipedia/commons/3/3c/Download_on_the_App_Store_Badge.svg" alt="App Store" class="app-button">
        </div>
    </div>
</section>

<style>
    .product-card {
        position: relative;
        display: flex;
        flex-direction: column;
    }
    
    .product-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }
    
    .add-to-cart-btn:hover {
        background: linear-gradient(135deg, #F4D03F, #D4AF37) !important;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(212, 175, 55, 0.4);
        bottom:10px;
        
    }
    
    .add-to-cart-btn:active {
        transform: translateY(0);
    }
    .product-card .add-to-cart-btn {
    margin-top: -5px;
}

</style>